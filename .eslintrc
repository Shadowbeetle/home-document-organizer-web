{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },

    "extends": "eslint-config-standard",

    "plugins": [
        "promise",
        "mocha"
    ],

    "rules": {
        "mocha/no-exclusive-tests": 2,
        "no-unused-expressions": "off",
        "array-bracket-spacing": [ "error", "always" ]
    }
}